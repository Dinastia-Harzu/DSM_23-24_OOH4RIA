@model IEnumerable<NemesisNevulaWeb.Models.PaypalVM>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Responsive Divs</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            background-color: #f0f0f0;
        }

        .container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 20px;
            padding: 20px;
        }

        .column {
            flex: 0 1 300px;
            padding: 20px;
            background-color: #fff;
            text-align: center;
            border: 1px solid #ddd;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease-in-out;
        }

            .column:hover {
                transform: translateY(-5px);
            }

        h3 {
            color: #333;
            margin-bottom: 10px;
        }

        p {
            color: #666;
            margin-bottom: 15px;
        }

        .btn-group {
            display: flex;
            justify-content: center;
        }

        .btn {
            margin: 0 5px;
            padding: 8px 12px;
            text-decoration: none;
            font-size: 14px;
            color: #fff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s ease-in-out;
        }

        .btn-info {
            background-color: #3498db;
        }

        .btn-secondary {
            background-color: #95a5a6;
        }

        .btn-danger {
            background-color: #e74c3c;
        }
    </style>
</head>
<body>

    <div class="container">
        @foreach (var item in Model)
        {
            <div class="column">
                <p>Email: @Html.DisplayFor(modelItem => item.Email)</p>
                <div class="btn-group" role="group">
                    <a class="btn btn-info" href="@Url.Action("Edit", new { id = item.Id })">Editar</a>
                    <a class="btn btn-secondary" href="@Url.Action("Details", new { id = item.Id })">Detalles</a>
                    <a class="btn btn-danger" href="@Url.Action("Delete", new { id = item.Id })">Eliminar</a>
                </div>
            </div>
        }
    </div>

</body>
</html>