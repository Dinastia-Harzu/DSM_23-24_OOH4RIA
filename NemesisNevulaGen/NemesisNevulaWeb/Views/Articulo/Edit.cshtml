@using NemesisNevulaGen.ApplicationCore.Enumerated.NemesisNevula
@model NemesisNevulaWeb.Models.ArticuloVM

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="vh-100 gradient-custom mb-5">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class=" card bg-dark text-white" style="border-radius: 1rem; border-color:yellow;">
                    <div class="card-body p-5">
                        <div class="">
                            <h2 class="fw-bold mb-2 text-uppercase  text-center">Edita tu noticia</h2>
                            <hr class="justify-content-center align-items-center " width="100%" />

                            <div class="row">
                                <div class="col-md-12">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group form-outline form-white mb-4 text-center">
                <label asp-for="Fotografia2" id="imgInputLabel" class="control-label">
                    <img id="imgPreview" src="@Model.Fotografia" alt="Imagen previsualizada" width="100" height="100" />
                </label>
                <input asp-for="Fotografia2" type="file" id="imgInput" accept="image/*" class="form-control" style="display: none;" name="Fotografia2" />
                <span asp-validation-for="Fotografia2" class="text-danger"></span>
            </div>
            <div class="form-group form-check" hidden>
                <label class="form-check-label mb-4">
                    <input class="form-check-input" asp-for="Fotografia" />@Model.Fotografia
                </label>
            </div>
            <div class="form-group mb-4">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="Precio" class="control-label"></label>
                <input asp-for="Precio" class="form-control" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>
            <div class="form-group row mb-4">
                                            <div class="col-md-6 mb-4">
                    @Html.LabelFor(model => model.Tipo, "Tipo", htmlAttributes: new { @class = "control-label" })
                    @Html.DropDownListFor(model => model.Tipo, Enum.GetValues(typeof(TipoArticuloEnum)).Cast<TipoArticuloEnum>().Select(v => new SelectListItem
               {
                   Text = v.ToString(),
                   Value = ((int)v).ToString()
               }), "Seleccione un tipo de artículo", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Tipo, "", new { @class = "text-danger" })
                </div>

                                            <div class="col-md-6 mb-4">
                    @Html.LabelFor(model => model.Rareza, "Rareza", htmlAttributes: new { @class = "control-label" })
                    @Html.DropDownListFor(model => model.Rareza, Enum.GetValues(typeof(RarezaArticuloEnum)).Cast<RarezaArticuloEnum>().Select(v => new SelectListItem
               {
                   Text = v.ToString(),
                   Value = ((int)v).ToString()
               }), "Seleccione la rareza del artículo", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Rareza, "", new { @class = "text-danger" })
                </div>

            <div class="form-group" hidden>
                <label asp-for="Fotografia" class="control-label" ></label>
                <input asp-for="Fotografia" class="form-control" />
                <span asp-validation-for="Fotografia" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
                                            <div class="form-group" hidden>
        <label asp-for="Valoracion" class="control-label" ></label>
                <input asp-for="Valoracion" class="form-control" />
                <span asp-validation-for="Valoracion" class="text-danger"></span>
            </div>
            <div class="form-group form-check mb-4">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="EsPublicado" /> ¿Publicar artículo?
                </label>
            </div>
            <div class="form-group" hidden>
            <label asp-for="FechaPublicacion" class="control-label" ></label>
                <input asp-for="FechaPublicacion" class="form-control" />
                <span asp-validation-for="FechaPublicacion" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="Temporada" class="control-label"></label>
                <input asp-for="Temporada" class="form-control" />
                <span asp-validation-for="Temporada" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="Previsualizacion" class="control-label"></label>
                <input asp-for="Previsualizacion" class="form-control" />
                <span asp-validation-for="Previsualizacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script src="/js/usuarioCreate.js"></script>
