@model NemesisNevulaWeb.Models.CompraVM

@{
    ViewData["Title"] = "Create";
    IEnumerable <SelectListItem> usuariosItems = (IEnumerable<SelectListItem>)ViewData["usuariosItems"];
    IEnumerable <SelectListItem> articulosItems = (IEnumerable<SelectListItem>)ViewData["articulosItems"];

    string formatearPrecio(float precio)
    {
        return precio.ToString("F2") + " €";
    }

}

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    .container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 20px;
        padding: 20px;
    }

    .column {
        flex: 0 1 300px;
        padding: 20px;
        background-color: #fff;
        text-align: center;
        border: 1px solid #ddd;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease-in-out;
    }

        .column:hover {
            transform: translateY(-5px);
        }

    h3 {
        color: #333;
        margin-bottom: 10px;
    }

    p {
        color: #666;
        margin-bottom: 15px;
    }

    .btn-group {
        display: flex;
        justify-content: center;
    }

    .btn {
        margin: 0 5px;
        padding: 8px 12px;
        text-decoration: none;
        font-size: 14px;
        color: #fff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s ease-in-out;
    }

    .btn-info {
        background-color: #3498db;
    }

    .btn-secondary {
        background-color: #95a5a6;
    }

    .btn-danger {
        background-color: #e74c3c;
    }
</style>

<h1>Confirmación de compra</h1>

<h4>Comprueba que tus datos de compra son correctos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-sm-12 mb-4">
                <div><strong>Nombre del artículo a comprar:</strong></div>
                <div>@ViewData["nom_art"]</div>
            </div>

            <b>Fecha de compra:</b><br />
            <span>@Model.Fecha.ToShortDateString()</span>
            <br /><br />
            <div class="form-group" hidden>
                <label asp-for="Fecha" class="control-label"></label>
                <input asp-for="Fecha" class="form-control"/>
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>

            <b>Precio total:</b><br />
            <span>@formatearPrecio(Model.PrecioTotal)</span>
            <br /><br />
            <div class="form-group" hidden>
                <label asp-for="PrecioTotal" class="control-label"></label>
                <input asp-for="PrecioTotal" class="form-control" />
                <span asp-validation-for="PrecioTotal" class="text-danger"></span>
            </div>

            <label for="descuento"><b>¿Quieres aplicar un descuento?:</b> </label><br />
            <input name="desc" type="checkbox" id="descuento" />
            <br /><br />
            
            <div class="form-group" hidden>
                <label asp-for="IdComprador" class="control-label"></label>
                <select class="form-select" asp-for="IdComprador" asp-items="usuariosItems"></select>
                <span asp-validation-for="IdComprador" class="text-danger"></span>
            </div>

            <div class="form-group" hidden>
                <label asp-for="IdArticulo" class="control-label"></label>
                <select class="form-select" asp-for="IdArticulo" asp-items="articulosItems"></select>
                <span asp-validation-for="IdArticulo" class="text-danger"></span>
            </div>

            @if((bool)ViewData["suficiente"])
            {
                <div class="form-group">
                    <input type="submit" value="Aceptar" class="btn btn-primary" />
                </div>
            }

            else
            {
                <p>¡No tienes saldo suficiente!</p>
            }
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
