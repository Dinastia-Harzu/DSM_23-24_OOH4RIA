@model NemesisNevulaWeb.Models.CompraVM

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";

    string floatToString(float precio)
    {
        return precio.ToString("F2") + " €";
    }
}

<style>
    .container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 20px;
        padding: 20px;
    }

    .column {
        flex: 0 1 300px;
        padding: 20px;
        background-color: #fff;
        text-align: center;
        border: 1px solid #ddd;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease-in-out;
    }

        .column:hover {
            transform: translateY(-5px);
        }

    h3 {
        color: #333;
        margin-bottom: 10px;
    }

    p {
        color: #666;
        margin-bottom: 15px;
    }

    .btn-group {
        display: flex;
        justify-content: center;
    }

    .btn {
        margin: 0 5px;
        padding: 8px 12px;
        text-decoration: none;
        font-size: 14px;
        color: #fff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s ease-in-out;
    }

    .btn-info {
        background-color: #3498db;
    }

    .btn-secondary {
        background-color: #95a5a6;
    }

    .btn-danger {
        background-color: #e74c3c;
    }
</style>

<h1>¡Compra realizada!</h1>

<div>
    <h4>Los detalles de tu compra son:</h4>
    <hr />
    <div class="row">
        <div class = "col-sm-12 mb-4">
            <div><strong>Fecha de la compra:</strong></div>
            <div>@Html.DisplayFor(model => model.Fecha)</div>
            
        </div>
        <div class = "col-sm-12 mb-4">
            <div><strong>Precio total de la compra realizada:</strong></div>
            <div>@floatToString(Model.PrecioTotal)</div>
        </div>
    </div>
<div>
    <a class="btn btn-info" asp-controller="Articulo" asp-action="Index">Aceptar</a>
</div>
</div>
