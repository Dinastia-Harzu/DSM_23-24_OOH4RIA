@model NemesisNevulaWeb.Models.CompraVM

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";

    string floatToString(float precio)
    {
        return precio.ToString("F2") + " €";
    }
}


<div class="container mt-5">
    <h1 class="text-center text-warning text-uppercase">Detalles de tu compra</h1>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-light shadow bg-dark">
                <div class="card-body">
    <h4>Detalles de tu compra:</h4>
    <hr />
    <div class="row">
        <div class = "col-sm-12 mb-4">
            <div><strong>Nombre del artículo:</strong></div>
            <div>@ViewData["nom_art"]</div> 
        </div>

        <div class = "col-sm-12 mb-4">
            <div><strong>Fecha de la compra:</strong></div>
            <div>@DateTime.Now.ToShortDateString()</div> 
        </div>

        <div class = "col-sm-12 mb-4">
            <div><strong>Precio total de la compra realizada:</strong></div>
            <div>@floatToString(Model.PrecioTotal)</div>
            
                        </div>
                        <div class="d-flex">
                            <a class="btn btn-aceptar d-flex justify-content-center" asp-controller="Articulo" asp-action="Index">Aceptar</a>
                        </div>
    </div>
<div>
                    </div>
                </div>
            </div>
        </div>
    </div>

   
</div>
</div>
