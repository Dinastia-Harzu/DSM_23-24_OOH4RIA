@model NemesisNevulaWeb.Models.NoticiaVM
@using System.Security.Claims;
@using Microsoft.AspNetCore.Authorization;

@{
    ViewData["Title"] = "CreaNoticia";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class=" card bg-dark text-white" style="border-radius: 1rem; border-color:yellow;">
                    <div class="card-body p-5">
                        <div class="">
                            <h2 class="fw-bold mb-2 text-uppercase  text-center">Nueva noticia</h2>
                            <hr class="justify-content-center align-items-center " width="100%" />

                                <div class="row">
                                    <div class="col-md-12">
                                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="form-group form-outline form-white mb-4 text-center">
                                            <label asp-for="Foto2" id="imgInputLabel" class="control-label">
                                                <img id="imgPreview" src="/css/estilos/imagenes/noImage.jpg" alt="Imagen previsualizada" width="100" height="100" />
                                            </label>
                                            <input asp-for="Foto2" type="file" id="imgInput" required="false" accept="image/*" class="form-control" style="display: none;" />
                                            <span asp-validation-for="Foto2" class="text-danger"></span>
                                        </div>
                                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="form-group mb-4">
                                                <label asp-for="Titulo" class="control-label"></label>
                                                <input asp-for="Titulo" class="form-control" />
                                                <span asp-validation-for="Titulo" class="text-danger"></span>
                                            </div>
                                        <div class="form-group mb-4 ">
                                                <label asp-for="Descripcion" class="control-label"></label>
                                                <textarea asp-for="Descripcion" class="form-control"></textarea>
                                                <span asp-validation-for="Descripcion" class="text-danger"></span>
                                            </div>

                                        <div class="form-group form-check mb-4 ">
                                                <label class="form-check-label mb-4 ">
                                                    <input class="form-check-input" asp-for="EsPublicada" /> ¿Publicar noticia?
                                                </label>
                                            </div>
                                            <div class="form-group d-flex justify-content-center">
                                            <div class="p-1">
                                                <input type="submit" value="Guardar" class="btn btn-aceptar" />
                                            </div>
                                            <div class="p-1">
                                                <a asp-action="Index" class="btn btn-cancelar">Cancelar</a>
                                            </div>
                                            </div>
                                    </form>
                                    </div>
                                </div>
                                    
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script src="/js/usuarioCreate.js"></script>


