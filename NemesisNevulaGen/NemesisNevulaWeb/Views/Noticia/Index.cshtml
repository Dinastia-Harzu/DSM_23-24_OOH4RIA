@model IEnumerable<NemesisNevulaWeb.Models.NoticiaVM>

@{
    ViewData["Title"] = "Index";
    string claseCard(bool publicada) => "card" + (publicada ? "" : " alert-secondary");
}

<style>
    .card {
        text-align: center;
    }
</style>

<h1>Index</h1>

<p>
    <a asp-action="Create">Crear noticia</a>
</p>
<div class="container-fluid">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="@claseCard(item.EsPublicada)">
                    <div class="card-header">
                        Noticia #@Html.DisplayFor(modelItem => item.Id)
                    </div>
                    <div class="card-body">
                        @Html.DisplayFor(modelItem => item.Titulo)
                    </div>
                    <div class="card-body">
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </div>
                    <div class="card-body">
                        @Html.DisplayFor(modelItem => item.Foto)
                    </div>
                    <div class="card-footer btn-group">
                        @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" })
                        @Html.ActionLink("Detalles", "Details", new { id = item.Id }, new { @class = "btn btn-secondary" })
                        @Html.ActionLink("Borrar", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                    </div>
                </div>
            </div>
        }
    </div>
</div>
