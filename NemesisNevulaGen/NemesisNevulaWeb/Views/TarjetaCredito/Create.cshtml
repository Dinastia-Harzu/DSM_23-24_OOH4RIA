@using NemesisNevulaGen.ApplicationCore.Enumerated.NemesisNevula
@model NemesisNevulaWeb.Models.TarjetaCreditoVM
@using System.Security.Claims;
@using Microsoft.AspNetCore.Identity;

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class=" gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class=" card bg-dark text-white" style="border-radius: 1rem; border-color:yellow;">
                    <div class="card-body p-5">
                        <div class="">
                            <h2 class="fw-bold mb-2 text-uppercase  text-center">Nueva Tarjeta</h2>
                            <hr class="justify-content-center align-items-center " width="100%" />

                            <div class="row">
                                <div class="col-md-12">
                                    <form asp-action="Create">
                                        <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>
                                        <div class="form-group mb-4">
                                            <label asp-for="NombreEnTarjeta" class="control-label"></label>
                                            <input asp-for="NombreEnTarjeta" class="form-control" />
                                            <span asp-validation-for="NombreEnTarjeta" class="text-danger"></span>
                                        </div>
                                        <div class="form-group mb-4">
                                            <label asp-for="Numero" class="control-label"></label>
                                            <input asp-for="Numero" class="form-control" />
                                            <span asp-validation-for="Numero" class="text-danger"></span>
                                        </div>
                                        <div class="form-group mb-4">
                                            <label asp-for="CodigoSeguridad" class="control-label"></label>
                                            <input asp-for="CodigoSeguridad" class="form-control" />
                                            <span asp-validation-for="CodigoSeguridad" class="text-danger"></span>
                                        </div>
                                        <div class="form-group mb-4">
                                            <label asp-for="FechaExpedicion" class="control-label"></label>
                                            <input asp-for="FechaExpedicion" class="form-control" />
                                            <span asp-validation-for="FechaExpedicion" class="text-danger"></span>
                                        </div>
                                        <div class="form-group mb-4">
                                            @Html.LabelFor(model => model.TipoTarjeta, "Tipo", htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-10">
                                                @Html.DropDownListFor(model => model.TipoTarjeta, Enum.GetValues(typeof(TipoTarjetaEnum)).Cast<TipoTarjetaEnum>().Select(v => new SelectListItem
                                           {
                                               Text = v.ToString(),
                                               Value = ((int)v).ToString()
                                           }), "Seleccione un tipo de tarjeta", new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.TipoTarjeta, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="d-flex justify-content-center">
                                            <div class="p-1">
                                                <input type="submit" value="Guardar" class="btn btn-aceptar" />
                                            </div>
                                            <div class="p-1">
                                                @Html.ActionLink("Cancelar", "MetodPago", "Usuario", new { id = User.FindFirstValue(ClaimTypes.NameIdentifier) }, new { @class = "btn btn-cancelar" })
                                            </div>


                                        </div>
                                    </form>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
