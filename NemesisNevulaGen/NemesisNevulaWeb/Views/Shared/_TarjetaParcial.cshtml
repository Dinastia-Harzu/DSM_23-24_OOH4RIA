@model IEnumerable<NemesisNevulaWeb.Models.TarjetaCreditoVM>

<p>
    @Html.ActionLink("Crear Tarjeta Crédito", "Create", "TarjetaCredito")
</p>
<table class="table text-white">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreEnTarjeta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Numero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CodigoSeguridad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaExpedicion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoTarjeta)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreEnTarjeta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Numero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CodigoSeguridad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaExpedicion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoTarjeta)
            </td>
            <td>
                    @Html.ActionLink("Edit", "Edit", "TarjetaCredito", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", "TarjetaCredito", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", "TarjetaCredito", new { id = item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
