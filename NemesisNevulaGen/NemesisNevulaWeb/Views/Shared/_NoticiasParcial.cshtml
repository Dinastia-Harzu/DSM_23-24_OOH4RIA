@model IEnumerable<NemesisNevulaWeb.Models.NoticiaVM>
   
@{
    string alcortardescripcion(string desc)
    {
        if (desc.Length > 100) return desc.Substring(0,100) + "...";
        return desc;
    }

}

<style>
    .card {
        transition: transform 0.3s ease-in-out;
    }

    .card:hover{
            background-color: #584383 !important;
            transform: translateY(-10px);
    }
        .card:hover .card-body {
        
        background-color: #584383 !important;
    }


   

    @@keyframes moveUp {
        0% {
            transform: translateY(0);
        }
        50% {
            transform: translateY(-5px);
        }
        100% {
            transform: translateY(0);
        }
    }

    .animated-card {
        animation: moveUp 1s ease; /* Agregar la animación al elemento */
    }
</style>

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <a href="@Url.Action("Details", "Noticia", new { id = item.Id })" class="">
                    <div class="card animated-card">
                        <img src="../css/estilos/imagenes/@item.Foto" class="card-img-top" alt="Imagen de la noticia">
                        <div class="card-body bg-dark">
                            <h4 class="card-title text-warning" style="text-transform: uppercase;">@item.Titulo</h4>
                            <p class="card-text" style="color:white;">@alcortardescripcion(@item.Descripcion)</p>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>


