@model IEnumerable<NemesisNevulaWeb.Models.NoticiaVM>
   
@{
    string alcortardescripcion(string desc)
    {
        if (desc.Length > 100) return desc.Substring(0,100) + "...";
        return desc;
    }

}

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    @if (!string.IsNullOrEmpty(item.Foto))
                    {
                        <img src="../css/estilos/imagenes/@item.Foto" class="card-img-top" alt="Imagen de la noticia">
                    }
                    <div class="card-body  bg-dark">
                        <h5 class="card-title">@item.Titulo</h5>
                        <p class="card-text">@alcortardescripcion(@item.Descripcion)</p>
                        <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-primary">Detalles</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

