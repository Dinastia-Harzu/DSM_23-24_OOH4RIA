@model NemesisNevulaWeb.Models.UsuarioVM

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class=" gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class=" card bg-dark text-white" style="border-radius: 1rem; border-color:yellow;">
                    <div class="card-body p-5">
                        <div class="mb-md-5 mt-md-4 pb-5">
                            <h2 class="fw-bold mb-2 text-uppercase  text-center">Modificar mis datos</h2>
                            <hr class="justify-content-center align-items-center " width="100%" />

                            <form asp-action="Edit" method="post" enctype="multipart/form-data">

                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group form-outline form-white mb-4 text-center">
                                    <label asp-for="Foto_perfil2" id="imgInputLabel" class="control-label">
                                        <img id="imgPreview" class=" rounded-circle" src="@Html.DisplayFor(model => model.Foto_perfil)" alt="Imagen previsualizada" style="width:100px;height:100px;cursor:pointer;" />
                                    </label>
                                    <input asp-for="Foto_perfil2" type="file" id="imgInput" required="false" accept="image/*" class="form-control" style="display: none;" />
                                    <span asp-validation-for="Foto_perfil2" class="text-danger"></span>
                                </div>
                                <div class="form-group form-outline form-white mb-4" style="display:none">
                                    <label asp-for="Foto_perfil" class="control-label"></label>
                                    <input asp-for="Foto_perfil" class="form-control" />
                                    <span asp-validation-for="Foto_perfil" class="text-danger"></span>
                                </div>
                                <div class="form-group form-outline form-white mb-4">
                                    <label asp-for="Nombre" class="control-label"></label>
                                    <input asp-for="Nombre" class="form-control" />
                                    <span asp-validation-for="Nombre" class="text-danger"></span>
                                </div>

                                <div class="form-group form-outline form-white mb-4">
                                    <label asp-for="Correo" class="control-label"></label>
                                    <input asp-for="Correo" class="form-control" />
                                    <span asp-validation-for="Correo" class="text-danger"></span>
                                </div>
                                <div class="form-group form-outline form-white mb-4">
                                    <label asp-for="Pass" class="control-label"></label>
                                    <input asp-for="Pass" class="form-control" />
                                    <span asp-validation-for="Pass" class="text-danger"></span>
                                </div>
                                <div class="form-group d-flex justify-content-center">
                                    <div class="p-1">
                                        <input type="submit" value="Guardar" class="btn btn-aceptar" />
                                    </div>
                                    <div class="p-1">
                                        <a asp-action="Index" class="btn btn-cancelar">Cancelar</a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script src="/js/usuarioCreate.js"></script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
