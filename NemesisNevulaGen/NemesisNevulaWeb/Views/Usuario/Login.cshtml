@model NemesisNevulaWeb.Models.LoginUsuarioVM

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<style>
    body {
        background-color: black;
    }
</style>

<meta name="viewport" content="width=device-width, initial-scale=1" />

<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class=" card bg-dark text-white" style="border-radius: 1rem; border-color:yellow;">
                    <div class="card-body p-5">
                        <div class="mb-md-5 mt-md-4 pb-5">
                            <h2 class="fw-bold mb-2 text-uppercase  text-center">Bienvenido de vuelta</h2>
                            <hr class="justify-content-center align-items-center " width="100%" />

                            <form asp-action="Login">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group form-outline form-white mb-4">
                                    <label asp-for="Nombre" class="control-label form-control-lg"></label>
                                    <input asp-for="Nombre" class="form-control form-control-lg" />
                                    <span asp-validation-for="Nombre" class="text-danger"></span>
                                </div>
                                <div class="form-group form-outline form-white mb-4">
                                    <label asp-for="Pass" class="control-label form-control-lg"></label>
                                    <input asp-for="Pass" class="form-control form-control-lg" />
                                    <span asp-validation-for="Pass" class="text-danger"></span>
                                    <p class="small mb-5 pb-lg-2"><a class="text-white-50" href="#!">¿Has olvidado tu contraseña?</a></p>
                                </div>
                                <div class="form-group  text-center">
                                    <button class="btn btn-outline-light btn-lg px-5" style="width=100%;" type="submit">Iniciar sesión</button>
                                </div>
                            </form>
                            <div class="d-flex align-items-center" style="padding:1em;">
                                <hr class="flex-grow-1" >
                                <span class="px-4" style="font-size: 1em;">O inicia sesión...</span>
                                <hr class="flex-grow-1">
                            </div>
                            <div class="form-group  text-center mb-4">
                                <button class="control-label form-control-lg">
                                    Inicia sesión con google
                                </button>
                            </div>
                        </div>
                        
                        <div>
                            <p class="mb-0">
                                ¿No tienes cuenta? <a href="#!" class="text-white-50 fw-bold">Registrate</a>
                            </p>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
