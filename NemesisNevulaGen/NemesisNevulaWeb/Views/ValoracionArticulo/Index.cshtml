@model IEnumerable<NemesisNevulaWeb.Models.ValoracionArticuloVM>

@{
    ViewData["Title"] = "Index";
}

<style>
    .valoracion-1::after {
        content: '⭐';
    }

    .valoracion-2::after {
        content: '⭐⭐';
    }

    .valoracion-3::after {
        content: '⭐⭐⭐';
    }
    
    .valoracion-4::after {
        content: '⭐⭐⭐⭐';
    }
    
    .valoracion-5::after {
        content: '⭐⭐⭐⭐⭐';
    }

    .card {
        text-align: center;
    }
</style>

<h1>Lista de valoraciones de artículos</h1>

<div class="container-fluid">
    <div class="row">
        @foreach (var item in Model) {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-header">
                        Valoración
                    </div>
                    <div class="card-body valoracion-@item.Valoracion">
                    </div>
                    <div class="card-header">
                        Artículo
                    </div>
                    <div class="card-body">
                        @Html.DisplayFor(modelItem => item.Articulo)
                    </div>
                    <div class="card-header">
                        Usuario
                    </div>
                    <div class="card-body">
                        @Html.DisplayFor(modelItem => item.Usuario)
                    </div>
                    <div class="card-footer btn-group">
                        @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" })
                        @Html.ActionLink("Detalles", "Details", new { id = item.Id }, new { @class = "btn btn-secondary" })
                        @Html.ActionLink("Borrar", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                    </div>
                </div>
            </div>
        }
    </div>
</div>
